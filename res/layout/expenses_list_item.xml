<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <!--item start -->
    <LinearLayout android:tag="body"  android:orientation="horizontal" android:layout_marginBottom="1dp"  android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="#000">

        <!--first col -->
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1"
                      android:layout_height="wrap_content" android:background="#000" >
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                 <!--expense code -->
                 <TextView android:id="@+id/expense_code"  android:textColor="#27f" android:layout_height="wrap_content" android:layout_width="fill_parent"
                          android:text="Airfare" android:textSize="14dp" />
                <!--end expense code -->

            </LinearLayout>

            <!--descraption -->
            <TextView android:id="@+id/list_description" android:maxLines="3" android:layout_height="wrap_content" android:layout_width="fill_parent"
                      android:text="Some food in  road cafe"/>
            <!--end descraption -->
        </LinearLayout>
        <!--end first col -->

        <!--second col -->
        <LinearLayout  android:orientation="vertical" android:layout_height="40dp" android:layout_width="70dp">
                  <TextView android:id="@+id/list_item_date" android:text="2012/12/29" android:maxLines="1" android:background="#662" android:layout_weight="1" android:textSize="12dp" android:gravity="center"  android:layout_height="wrap_content" android:layout_width="fill_parent" />
                  <TextView android:id="@+id/list_item_amount" android:background="#262" android:maxLines="1" android:text="$9832.11" android:layout_weight="1" android:textSize="14dp" android:gravity="center"  android:layout_height="wrap_content" android:layout_width="fill_parent" />
        </LinearLayout>
        <!--end second col -->

        <!-- delete -->
        <TextView android:id="@+id/remove_item" android:layout_height="fill_parent" android:layout_width="50dp" android:background="#711"
                  android:text="X" android:gravity="center"/>
        <!--end delete -->

    </LinearLayout>
    <!--item end -->


</LinearLayout>
