<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <!--item start -->
    <LinearLayout android:tag="body"  android:orientation="horizontal" android:layout_marginBottom="1dp"  android:layout_height="wrap_content" android:layout_width="fill_parent" >

        <LinearLayout android:layout_height="20dp" android:layout_width="20dp" android:background="@drawable/small_item_code_icon" android:layout_marginLeft="1dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" />

        <!--first col -->
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_weight="1"
                      android:layout_height="wrap_content"  >
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">


            </LinearLayout>

            <!--descraption -->
            <TextView android:id="@+id/list_description" android:paddingTop="5dp" android:paddingBottom="3dp" android:textSize="17dp" android:maxLines="3" android:layout_height="wrap_content" android:layout_width="fill_parent"
                      android:text="Lenovo X31 Laptop"/>
            <!--end descraption -->
        </LinearLayout>
        <!--end first col -->

        <!--second col -->
        <LinearLayout android:layout_marginTop="5dp"  android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="90dp">

                  <TextView android:id="@+id/list_item_amount" android:background="#262" android:maxLines="1" android:text="$9832.11"  android:textSize="14dp" android:gravity="center"  android:layout_height="wrap_content" android:layout_width="wrap_content" android:paddingLeft="5dp" android:paddingRight="5dp" />
        </LinearLayout>
        <!--end second col -->



        <!--expense code -->
        <TextView android:visibility="gone" android:id="@+id/expense_code"  android:textColor="#27f" android:layout_height="wrap_content" android:layout_width="fill_parent"
                  android:text="Airfare" android:textSize="14dp" />
        <!--end expense code -->
        <!-- date for item -->
        <TextView android:visibility="gone" android:id="@+id/list_item_date" android:text="2012/12/29" android:maxLines="1" android:background="#662" android:layout_weight="1" android:textSize="12dp" android:gravity="center"  android:layout_height="wrap_content" android:layout_width="fill_parent" />
        <!--end  date for item -->

        <!-- delete -->
        <TextView android:visibility="gone" android:id="@+id/remove_item"  android:layout_height="fill_parent" android:layout_width="50dp" android:background="#711"
                  android:text="X" android:gravity="center"/>
        <!--end delete -->

    </LinearLayout>
    <!--item end -->

<LinearLayout android:background="@drawable/item_separator" android:layout_width="fill_parent" android:layout_height="10dp"/>
</LinearLayout>
