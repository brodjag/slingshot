<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  android:background="@drawable/background2"
      android:orientation="vertical"        android:layout_width="fill_parent"  android:layout_height="fill_parent">


    <!--head -->
    <LinearLayout android:background="@drawable/head_bg_v3"  android:orientation="horizontal" android:layout_height="72dp"  android:layout_width="fill_parent">


        <TextView  android:textColor="#00a8ff" android:gravity="center"  android:textSize="24dp" android:paddingBottom="5dp" android:paddingLeft="30dp"
                   android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1" android:text="Captured Expenses" />

        <!--LinearLayout    android:layout_width="60dp" android:layout_height="60dp" android:gravity="center"-->
            <LinearLayout android:id="@+id/add_item"  android:background="@drawable/add_in_list_bn"  android:layout_width="60dp" android:layout_height="60dp"  />
        </LinearLayout>
    <!--/LinearLayout-->
    <!-- end head -->

    <TextView android:id="@+id/message_no_items" android:text="Press [+] to enter expense" android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1" android:gravity="center"/>
    <!--scrollList -->
    <ScrollView android:id="@+id/scrollist" android:visibility="gone" android:layout_height="0dp" android:layout_width="fill_parent" android:layout_weight="1">
    <LinearLayout android:id="@+id/list_expenses" android:orientation="vertical" android:layout_height="wrap_content"  android:layout_width="fill_parent">
    <!--item -->


    </LinearLayout>
    </ScrollView>
    <!--end scrollList -->
</LinearLayout>